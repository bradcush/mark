{
  "name": "mark",
  "version": "0.1.40",
  "description": "Automated tab management",
  "repository": "https://github.com/bradcush/mark.git",
  "author": "Bradley Cushing <bradleycushing@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build:dev": "yarn meta:manifest && webpack --config meta/webpack.config.dev.ts",
    "build:prod": "yarn meta:manifest && webpack --config meta/webpack.config.prod.ts",
    "lint": "eslint --ext .ts,.json .",
    "lint:fix": "yarn lint --fix",
    "meta:manifest": "rm -rf generated && mkdir generated && ts-node meta/manifest/generate.ts --browser chromium > generated/manifest.json",
    "test:unit": "jest '/__tests__/.*\\.unit\\.(js|ts)$' --config=./jest.config.json",
    "test:unit:coverage": "yarn test:unit --coverage"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint"
    }
  },
  "dependencies": {
    "parse-domain": "^3.0.3",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/chrome": "^0.0.171",
    "@types/copy-webpack-plugin": "6.4.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.0.14",
    "@types/terser-webpack-plugin": "^5.0.3",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "commander": "^7.2.0",
    "copy-webpack-plugin": "^8.1.1",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-junit-reporter": "^1.1.0",
    "prettier": "^2.0.5",
    "terser-webpack-plugin": "^5.1.3",
    "ts-jest": "^26.4.3",
    "ts-loader": "^7.0.5",
    "ts-node": "^9.1.1",
    "typescript": "^3.9.5",
    "webpack": "^5.31.2",
    "webpack-cli": "^4.6.0",
    "webpack-merge": "^5.7.3"
  }
}
