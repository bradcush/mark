{
    "verbose": true,
    "collectCoverageFrom": [
        "<rootDir>/**/*.ts",
        "!<rootDir>/meta/**/*.ts",
        "!<rootDir>/**/mocks/**",
        "!<rootDir>/**/node_modules/**",
        "!<rootDir>/typings/**"
    ],
    "globals": {
        "ENABLE_BOOKMARK_COUNTER": false,
        "ENABLE_LOGGING": false
    },
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.(unit)\\.(js|ts)$",
    "moduleFileExtensions": ["ts", "js", "json", "node"],
    "moduleNameMapper": {
        "^src(.*)$": "<rootDir>/src$1"
    },
    "coverageReporters": ["html", "json"],
    "moduleDirectories": ["node_modules", "<rootDir>/"],
    "modulePathIgnorePatterns": ["<rootDir>[/\\\\](dist|node_modules)[/\\\\]"]
}
