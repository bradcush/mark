{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "module": "esnext",
        "moduleResolution": "nodenext",
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "esnext",
        "types": [
            "bun-types",
            "chrome",
            "jest"
        ]
    }
}
