{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2017",
        "types": [
            "chrome",
            "copy-webpack-plugin",
            "jest",
            "node",
            "terser-webpack-plugin",
            "webpack"
        ]
    }
}
